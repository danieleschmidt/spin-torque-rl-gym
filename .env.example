# Environment Configuration for Spin-Torque RL-Gym

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================

# Debug mode (development only)
DEBUG=true

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Random seed for reproducible experiments
RANDOM_SEED=42

# ===========================================
# PHYSICS SIMULATION SETTINGS
# ===========================================

# Default simulation timestep (seconds)
DEFAULT_TIMESTEP=1e-12

# Maximum simulation time (seconds)
MAX_SIMULATION_TIME=100e-9

# Default temperature (Kelvin)
DEFAULT_TEMPERATURE=300

# Enable thermal fluctuations
ENABLE_THERMAL_FLUCTUATIONS=true

# Enable quantum corrections
ENABLE_QUANTUM_CORRECTIONS=false

# ===========================================
# DEVICE PARAMETERS
# ===========================================

# Default device type (stt_mram, sot_mram, vcma_mram, skyrmion)
DEFAULT_DEVICE_TYPE=stt_mram

# Default saturation magnetization (A/m)
DEFAULT_MS=800e3

# Default Gilbert damping parameter
DEFAULT_DAMPING=0.01

# Default spin polarization
DEFAULT_POLARIZATION=0.7

# ===========================================
# TRAINING SETTINGS
# ===========================================

# Maximum current density (A/cmÂ²)
MAX_CURRENT_DENSITY=5e6

# Maximum pulse duration (seconds)
MAX_PULSE_DURATION=10e-9

# Success threshold for magnetization alignment
SUCCESS_THRESHOLD=0.95

# Energy weight in reward function
ENERGY_WEIGHT=0.1

# ===========================================
# COMPUTATIONAL RESOURCES
# ===========================================

# Number of CPU cores to use (0 = auto-detect)
NUM_CORES=0

# GPU device ID (-1 for CPU only)
GPU_DEVICE_ID=-1

# Enable JAX acceleration
ENABLE_JAX=false

# JAX platform (cpu, gpu, tpu)
JAX_PLATFORM=cpu

# ===========================================
# VISUALIZATION SETTINGS
# ===========================================

# Enable real-time visualization during training
ENABLE_VISUALIZATION=false

# Visualization update rate (FPS)
VISUALIZATION_FPS=30

# Save visualization frames
SAVE_VISUALIZATION_FRAMES=false

# Visualization output directory
VISUALIZATION_OUTPUT_DIR=./visualizations

# ===========================================
# EXPERIMENT TRACKING
# ===========================================

# Weights & Biases project name
WANDB_PROJECT=spin-torque-rl-gym

# MLflow tracking URI
MLFLOW_TRACKING_URI=./mlruns

# Experiment name prefix
EXPERIMENT_NAME_PREFIX=exp

# ===========================================
# DATA STORAGE
# ===========================================

# Data directory for experiments
DATA_DIR=./data

# Results directory
RESULTS_DIR=./results

# Models directory
MODELS_DIR=./models

# Cache directory
CACHE_DIR=./cache

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Redis URL for distributed training (optional)
# REDIS_URL=redis://localhost:6379

# PostgreSQL URL for experiment tracking (optional)  
# POSTGRES_URL=postgresql://user:password@localhost:5432/spin_torque_db

# ===========================================
# TESTING SETTINGS
# ===========================================

# Test data directory
TEST_DATA_DIR=./tests/data

# Enable slow tests
ENABLE_SLOW_TESTS=false

# Test timeout (seconds)
TEST_TIMEOUT=300

# ===========================================
# SECURITY SETTINGS
# ===========================================

# API key for external services (if needed)
# API_KEY=your_api_key_here

# Secret key for encryption (generate with: openssl rand -hex 32)
# SECRET_KEY=your_secret_key_here

# ===========================================
# PERFORMANCE MONITORING
# ===========================================

# Enable performance profiling
ENABLE_PROFILING=false

# Profile output directory
PROFILE_OUTPUT_DIR=./profiles

# Memory monitoring interval (seconds)
MEMORY_MONITOR_INTERVAL=60